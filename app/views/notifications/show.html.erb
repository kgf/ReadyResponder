<% content_for :sidebar do %>
  <%= sidebar_button_link 'List', notifications_path %>
  <%= sidebar_button_link 'Edit', edit_notification_path(@notification) %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Subject:</strong>
  <%= @notification.subject %>
</p>

<p>
  <strong>Body:</strong>
  <%= @notification.body %>
</p>

<p>
  <strong>Event:</strong>
  <%= link_to @event.title, event_path(@event) if @event %>
</p>

<p>
  <strong>Status:</strong>
  <%= @notification.status %>
</p>

<p>
  <strong><%# Start at: %></strong>
  <%#= @notification.start_time %>
</p>

<p>
  <strong><%# Time to Live: %></strong>
  <%#= @notification.time_to_live %>
</p>

<p>
  <strong><%#Interval: %></strong>
  <%#= @notification.interval %>
</p>

<p>
  <strong><%# Iterations to Escalation: %></strong>
  <%#= @notification.iterations_to_escalation %>
</p>

<p>
  <strong>Departments:</strong></br>
  <% @notification.departments.each do |dept| %>
     <%= dept.name %></br>
  <% end %>
</p>
<p>
  <strong>Channels:</strong>
  <%= @notification.channels %>
</p>
<table id="generic-people" class="generic_datatable table table-striped table-bordered">
  <caption><h4><center>Chosen Indivduals</center></h4></caption>
  <thead>
   <tr>
     <th>Title</th>
     <th>Name</th>
     <th>Phone</th>
     <th>Dept</th>
   </tr>
  </thead>
  <tbody>
   <% @individuals.each do |person| %>
     <tr <%== row_class if local_assigns[:row_class] %>>
       <td><%= person.shortrank %></td>
       <td><%= link_to person.fullname, person_path(person) %></td>
       <td><%= number_to_phone(person.phone) %></td>
       <td><%= "#{person.dept_shortname} #{person.division1}" %></td>
     </tr>
   <% end %>
  </tbody>
</table>
<hr/>

<%= render(partial: 'recipients/recipients_table',
           locals: { recipients: @notification.recipients}) %>
<p>
  Created <%= @notification.created_at %><br/>
  Last Modified <%= @notification.updated_at %><br/>
  Last Editor <%= @last_editor %>
</p>
